<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amnesty Invisible Victims</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="l-container" class="container">
      <header>
				<div class="wrap">
      		<div id="logo">
						<%= link_to image_tag("header-logo-en.gif"), root_path, :class => 'brand' %>
					</div>
					<div id="title">
						<h1>Llegue a Salvo.</h1>
					</div>
					<div class="act-right">
						<% if user_signed_in? %>
					    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete', :class => "btn", :id => "log_in"  %>        
					  <% else %>
					    <%= link_to 'Log In', new_user_session_path, :class => "btn", :id => "log_in" %>  
					  <% end %>
					</div>
				</div>
      </header>
      <div id="l-main" role="main">
				<%= render 'layouts/navigation' %>
<!--     <%= render 'layouts/messages' %> -->
				<div id="wrap">
					<div id="canvas">
        		<%= yield %>
					</div>
				</div>
      </div>
      <footer>
      </footer>
    </div> <!--! end of #container -->
  </body>
</html>
